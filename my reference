#include <iostream>
#include <iomanip>
using namespace std;


//CLI
void header(const string title) {
    cout << "============================================================\n";
    cout << setw(47) << title << endl;
    cout << "============================================================\n\n";
}


//Sub choices 1
void mainMenuUI() {
    cout << setw(20) << "[1]  Customer\n";
    cout << setw(20) << "[2]  Owner\n";
    cout << setw(20) << "[3]  Exit\n";
}
//Sub choices 2
void ownerMenuUI() {
    cout << setw(20) << "[1]  Return to Main Menu\n";
    cout << setw(20) << "[2]  Set Working Days\n";
    cout << setw(20) << "[3]  View Available Dates\n";
}
//Sub choices 3
void customerMenuUI() {
    cout << setw(20) << "[1]  Return to Main Menu\n";
    cout << setw(20) << "[2]  Make Reservation\n";
}


//Owner CLI
void ownerMenu() {
    int choice = 0;

    while (choice != 1) {
        system("clear");
        header("OWNER PANEL");
        ownerMenuUI();

        cout << "\nEnter choice: ";
        cin >> choice;

        if (choice == 2) {
            cout << "\nSetting working days...\n";
            cout << "Enter 1 to return: ";
            cin >> choice;
        }

        else if (choice == 3) {
            cout << "\nViewing available dates...\n";
            cout << "Enter 1 to return: ";
            cin >> choice;
        }
    }
}


//Customer CLI
void customerMenu() {
    int choice = 0;

    while (choice != 1) {
        system("clear");
        header("CUSTOMER PANEL");
        customerMenuUI();

        cout << "\nEnter choice: ";
        cin >> choice;

        if (choice == 2) {
            cout << "\nMaking reservation...\n";
            cout << "Enter 1 to return: ";
            cin >> choice;
        }
    }
}

//First CLI
int main() {
    int choice = 0;

    while (choice != 3) {
        system("clear");
        header("VEHICLE SERVICE RESERVATION SYSTEM");
        mainMenuUI();

        cout << "\nEnter choice: ";
        cin >> choice;

        if (choice == 1) customerMenu();
        else if (choice == 2) ownerMenu();
        else if (choice == 3) cout << "Exiting...\n";
    }

    return 0;
}
